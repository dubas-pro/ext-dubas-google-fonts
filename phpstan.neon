parameters:
  phpVersion: 80100  # PHP 8.1
  level: 8
  paths:
    - src

  scanDirectories:
    - site/custom/Espo/Modules/Tcpdf/vendor

  excludePaths:
    analyse:
      - site
      - src/*/vendor/*

  bootstrapFiles:
    - site/bootstrap.php

  inferPrivatePropertyTypeFromConstructor: true
  treatPhpDocTypesAsCertain: false
  reportUnmatchedIgnoredErrors: false
